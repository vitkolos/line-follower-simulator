<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="SimulatorApp.App" RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <Style Selector="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Label">
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="Border.separator">
            <Setter Property="BorderBrush" Value="#cccccc" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
        <Style Selector="Border.container">
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style Selector="TextBox.number">
            <Setter Property="Width" Value="70" />
            <Setter Property="Margin" Value="2.5,0,5,0" />
        </Style>
        <Style Selector="Button.confirm">
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>
    </Application.Styles>
</Application>